{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "customername": {
            "type": "string",
            "minLength": 1
        },
        "environment": {
            "type": "string",
            "allowedValues": [
                "dev",
                "test",
                "prod"
            ]
        }
    },
    "variables": {
        "storagename": "[toLower(concat(parameters('customername'),'sto', uniqueString(parameters('customername'), parameters('environment'))))]",
        "storagetype": {
            "dev": "Standard_LRS",
            "test": "Standard_LRS",
            "prod": "Standard_GRS"
        },
        "storageCnt": {
            "dev": 1,
            "test": 1,
            "prod": 3
        }
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('storageaccount', copyIndex())]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri":"https://raw.githubusercontent.com/emilkje/azure-msp-workshop/master/linkedTemplates/StorageAccount.json",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                 "storagename":{"value": "[concat(variables('storagename'), copyIndex())]"},
                 "storagetype": {"value": "[variables('storagetype')[parameters('environment')]]"}
               }
            },
            "copy": {
                "name": "accounts",
                "count": "[variables('storageCnt')[parameters('environment')]]"
            }
         }
    ],
    "outputs": {
        "greeting": {
            "type": "string",
            "value": "[concat('Hello ', parameters('customername'))]"
        }
    }
}