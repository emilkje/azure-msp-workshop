{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "customername": {
            "type": "string",
            "minLength": 1
        }
    },
    "variables": {
        "storagename": {
            "type": "string",
            "value": "[toLower(concat(parameters('customername'),'sto', uniqueString(parameters('customername'))))]"
        }
    },
    "resources": [],
    "outputs": {
        "greeting": {
            "type": "string",
            "value": "[concat('Hello ', parameters('customername'))]"
        }
    }
}